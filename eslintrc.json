{
  "root": true,
  "extends": [
    "plugin:@wordpress/eslint-plugin/recommended"
  ],
  "globals": {
    "wp": true
  },
  "env": {
    "browser": true,
    "es2023": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true,
      "objectLiteralDuplicateProperties": false
    },
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": "off",
    "no-var": 2,
    "no-console": 1,
    "no-useless-escape": 0,
    "no-unused-vars": 1,
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "no-tabs": "error",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1,
        "maxBOF": 0
      }
    ],
    "space-infix-ops": [
      "warn",
      {
        "int32Hint": false
      }
    ],
    "prefer-const": 0,
    "prettier/prettier": 0,
    "jsdoc/require-returns-description": 0,
    "react-hooks/rules-of-hooks": 0,
    "eqeqeq": 0,
    "@wordpress/no-global-event-listener": 0
  }
}
